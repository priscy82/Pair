<!DOCTYPE html>
<html>
<head>
  <title>WhatsApp Pairing Code Generator</title>
</head>
<body>
  <h2>Pairing Code Generator</h2>
  <form action="/ui/pair" method="POST">
    <label>Number|Count:</label>
    <input type="text" name="numberInput" placeholder="233xxxxxxx|2" required>
    <button type="submit">Get Codes</button>
  </form>

  <% if (error) { %>
    <p style="color:red;"><%= error %></p>
  <% } %>

  <% if (codes) { %>
    <h3>Codes:</h3>
    <ul>
      <% codes.forEach(c => { %>
        <li><code><%= c %></code></li>
      <% }) %>
    </ul>
  <% } %>
</body>
</html>
